@model List<SACCOBlockChainSystem.Models.DTOs.LoanTypeResponseDTO>

@{
    ViewData["Title"] = "Loan Types";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">Loan Types</h1>
            <p class="text-muted">Manage different types of loans offered to members</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Loan Type
            </a>
        </div>
    </div>

    <!-- Dashboard Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Loan Types
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalLoanTypes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Loan Types
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveLoanTypes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Loans
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalLoans</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hand-holding-usd fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Total Loan Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalLoanAmount.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Box -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Search Loan Types</h6>
        </div>
        <div class="card-body">
            <form asp-action="SearchResults" method="get" class="form-inline">
                <div class="input-group w-100">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by loan code, type, or product..." />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Loan Types Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Loan Types</h6>
            <a asp-action="Report" class="btn btn-info btn-sm">
                <i class="fas fa-chart-bar"></i> View Report
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Loan Code</th>
                            <th>Loan Type</th>
                            <th>Product</th>
                            <th>Max Amount</th>
                            <th>Interest</th>
                            <th>Repay Period</th>
                            <th>Priority</th>
                            <th>Active Loans</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loanType in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@loanType.LoanCode</strong>
                                    @if (loanType.MobileLoan)
                                    {
                                        <span class="badge badge-info ml-1">Mobile</span>
                                    }
                                    @if (loanType.Bridging)
                                    {
                                        <span class="badge badge-warning ml-1">Bridging</span>
                                    }
                                </td>
                                <td>@loanType.LoanType</td>
                                <td>@(loanType.LoanProduct ?? "-")</td>
                                <td>
                                    @if (loanType.MaxAmount.HasValue)
                                    {
                                        <span class="text-success">@loanType.MaxAmount.Value.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Limit</span>
                                    }
                                </td>
                                <td>@(loanType.Interest ?? "-")</td>
                                <td>@(loanType.RepayPeriod?.ToString() ?? "-") months</td>
                                <td>
                                    <span class="badge badge-secondary">@loanType.Priority</span>
                                </td>
                                <td>
                                    <span class="badge @(loanType.ActiveLoans > 0 ? "badge-success" : "badge-secondary")">
                                        @loanType.ActiveLoans
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-loanCode="@loanType.LoanCode"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-loanCode="@loanType.LoanCode"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-loanCode="@loanType.LoanCode"
                                           class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "order": [[6, "asc"]], // Sort by priority
                "columnDefs": [
                    { "orderable": false, "targets": 8 } // Disable sorting for actions column
                ]
            });
        });
    </script>
}