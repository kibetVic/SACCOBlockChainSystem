@model List<SACCOBlockChainSystem.Models.DTOs.LoanSummaryDTO>
@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var searchCriteria = ViewBag.SearchCriteria as SACCOBlockChainSystem.Models.DTOs.LoanSearchDTO;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a asp-action="Search" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i> New Search
                </a>
                <h2 class="page-title mb-0">
                    <i class="bi bi-list-check me-2"></i>Search Results
                </h2>
            </div>
            <div>
                <span class="badge bg-info p-3">
                    <i class="bi bi-files me-2"></i>@ViewBag.ResultCount Loans Found
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Search Criteria Summary -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Search Criteria</h6>
                <div class="d-flex flex-wrap gap-3">
                    @if (!string.IsNullOrEmpty(searchCriteria?.LoanNo))
                    {
                        <span class="badge bg-light text-dark p-2">
                            Loan No: @searchCriteria.LoanNo
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(searchCriteria?.MemberNo))
                    {
                        <span class="badge bg-light text-dark p-2">
                            Member No: @searchCriteria.MemberNo
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(searchCriteria?.MemberName))
                    {
                        <span class="badge bg-light text-dark p-2">
                            Member: @searchCriteria.MemberName
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(searchCriteria?.LoanStatus))
                    {
                        <span class="badge bg-light text-dark p-2">
                            Status: @searchCriteria.LoanStatus
                        </span>
                    }
                    @if (searchCriteria?.FromDate.HasValue == true)
                    {
                        <span class="badge bg-light text-dark p-2">
                            From: @searchCriteria.FromDate.Value.ToString("dd/MM/yyyy")
                        </span>
                    }
                    @if (searchCriteria?.ToDate.HasValue == true)
                    {
                        <span class="badge bg-light text-dark p-2">
                            To: @searchCriteria.ToDate.Value.ToString("dd/MM/yyyy")
                        </span>
                    }
                    @if (searchCriteria?.MinAmount.HasValue == true)
                    {
                        <span class="badge bg-light text-dark p-2">
                            Min: KES @searchCriteria.MinAmount.Value.ToString("N0")
                        </span>
                    }
                    @if (searchCriteria?.MaxAmount.HasValue == true)
                    {
                        <span class="badge bg-light text-dark p-2">
                            Max: KES @searchCriteria.MaxAmount.Value.ToString("N0")
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Results Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Loan Listings</h5>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportToExcel()">
                            <i class="bi bi-file-excel me-2"></i>Excel
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportToPdf()">
                            <i class="bi bi-file-pdf me-2"></i>PDF
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="printResults()">
                            <i class="bi bi-printer me-2"></i>Print
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0" id="resultsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Loan No</th>
                                <th>Member</th>
                                <th>Loan Type</th>
                                <th>Principal</th>
                                <th>Approved</th>
                                <th>Disbursed</th>
                                <th>Outstanding</th>
                                <th>Arrears</th>
                                <th>Application Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var loan in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@loan.LoanNo</strong>
                                            @if (loan.DaysOverdue > 0)
                                            {
                                                <span class="badge bg-danger ms-1" title="Days Overdue">
                                                    @loan.DaysOverdue days
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div>@loan.MemberName</div>
                                            <small class="text-muted">@loan.MemberNo</small>
                                        </td>
                                        <td>@loan.LoanType</td>
                                        <td class="text-end">@loan.PrincipalAmount.ToString("N0")</td>
                                        <td class="text-end">@loan.ApprovedAmount.ToString("N0")</td>
                                        <td class="text-end">@loan.DisbursedAmount.ToString("N0")</td>
                                        <td class="text-end fw-bold @(loan.OutstandingBalance > 0 ? "text-warning" : "text-success")">
                                            @loan.OutstandingBalance.ToString("N0")
                                        </td>
                                        <td class="text-end @(loan.ArrearsAmount > 0 ? "text-danger fw-bold" : "")">
                                            @loan.ArrearsAmount.ToString("N0")
                                        </td>
                                        <td>@loan.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @await Html.PartialAsync("_LoanStatusBadge", loan.LoanStatus)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-loanNo="@loan.LoanNo"
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (loan.LoanStatus == "Approved")
                                                {
                                                    <a asp-action="Disburse" asp-route-loanNo="@loan.LoanNo"
                                                       class="btn btn-sm btn-outline-success" title="Disburse">
                                                        <i class="bi bi-cash-stack"></i>
                                                    </a>
                                                }
                                                @if (loan.LoanStatus == "Disbursed" || loan.LoanStatus == "Active")
                                                {
                                                    <a asp-action="Repay" asp-route-loanNo="@loan.LoanNo"
                                                       class="btn btn-sm btn-outline-primary" title="Make Payment">
                                                        <i class="bi bi-arrow-left-right"></i>
                                                    </a>
                                                }
                                                <a asp-action="Statement" asp-route-loanNo="@loan.LoanNo"
                                                   class="btn btn-sm btn-outline-info" title="Statement">
                                                    <i class="bi bi-file-text"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center py-5">
                                        <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                        <h5 class="text-muted">No loans found</h5>
                                        <p class="text-muted mb-0">Try adjusting your search criteria</p>
                                        <a asp-action="Search" class="btn btn-primary mt-3">
                                            <i class="bi bi-search me-2"></i>New Search
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @if (Model.Any())
                        {
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Totals:</td>
                                    <td class="text-end fw-bold">@Model.Sum(l => l.PrincipalAmount).ToString("N0")</td>
                                    <td class="text-end fw-bold">@Model.Sum(l => l.ApprovedAmount).ToString("N0")</td>
                                    <td class="text-end fw-bold">@Model.Sum(l => l.DisbursedAmount).ToString("N0")</td>
                                    <td class="text-end fw-bold">@Model.Sum(l => l.OutstandingBalance).ToString("N0")</td>
                                    <td class="text-end fw-bold text-danger">@Model.Sum(l => l.ArrearsAmount).ToString("N0")</td>
                                    <td colspan="3"></td>
                                </tr>
                            </tfoot>
                        }
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        Showing @Model.Count results
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm mb-0" id="pagination">
                            <!-- Pagination will be loaded here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#resultsTable').DataTable({
                pageLength: 25,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                order: [[8, 'desc']],
                language: {
                    search: "Filter records:",
                    zeroRecords: "No matching loans found",
                    info: "Showing _START_ to _END_ of _TOTAL_ loans",
                    infoEmpty: "Showing 0 to 0 of 0 loans",
                    infoFiltered: "(filtered from _MAX_ total loans)"
                }
            });
        });

        function exportToExcel() {
            var searchParams = new URLSearchParams(window.location.search).toString();
            window.location.href = '@Url.Action("ExportToExcel")?' + searchParams;
        }

        function exportToPdf() {
            var searchParams = new URLSearchParams(window.location.search).toString();
            window.location.href = '@Url.Action("ExportToPdf")?' + searchParams;
        }

        function printResults() {
            var printContents = document.getElementById('resultsTable').outerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload();
        }
    </script>
}