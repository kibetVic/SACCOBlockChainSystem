@using SACCOBlockChainSystem.Models.DTOs
@model List<ShareTypeResponseDTO>
@{
    ViewData["Title"] = "Share Types Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6">
                    <i class="fas fa-tags"></i> Share Types Management
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle"></i> New Share Type
                </a>
            </div>
        </div>
    </div>

    <!-- Share Types Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5>
                        <i class="fas fa-list"></i> All Share Types
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Share Type</th>
                                        <th>Account</th>
                                        <th>Min Amount</th>
                                        <th>Max Amount</th>
                                        <th>Members</th>
                                        <th>Total Shares</th>
                                        <th>Properties</th>
                                        <th>Priority</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var shareType in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@shareType.SharesCode</strong>
                                            </td>
                                            <td>
                                                @shareType.SharesType
                                                @if (shareType.IsMainShares)
                                                {
                                                    <span class="badge bg-success ms-1">Main</span>
                                                }
                                            </td>
                                            <td>@shareType.SharesAcc</td>
                                            <td>@shareType.MinAmount.ToString("C")</td>
                                            <td>
                                                @if (shareType.MaxAmount.HasValue)
                                                {
                                                    <span>@shareType.MaxAmount.Value.ToString("C")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Limit</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@shareType.TotalMembers</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@shareType.TotalShares.ToString("C")</span>
                                            </td>
                                            <td>
                                                @if (shareType.UsedToGuarantee)
                                                {
                                                    <span class="badge bg-warning me-1">Guarantee</span>
                                                }
                                                @if (shareType.Withdrawable)
                                                {
                                                    <span class="badge bg-primary me-1">Withdrawable</span>
                                                }
                                                @if (shareType.UsedToOffset)
                                                {
                                                    <span class="badge bg-danger me-1">Offset</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-dark">@shareType.Priority</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-sharesCode="@shareType.SharesCode"
                                                   class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-sharesCode="@shareType.SharesCode"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (shareType.TotalMembers == 0)
                                                {
                                                    <a asp-action="Delete" asp-route-sharesCode="@shareType.SharesCode"
                                                       class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-danger" disabled title="Cannot delete - in use">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No share types found.
                            <a asp-action="Create" class="alert-link">Create your first share type</a>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>