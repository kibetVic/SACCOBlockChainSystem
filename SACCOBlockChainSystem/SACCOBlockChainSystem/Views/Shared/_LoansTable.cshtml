@model List<SACCOBlockChainSystem.Models.DTOs.LoanSummaryDTO>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Loans List</h5>
        <span class="badge bg-primary">@Model.Count Loans</span>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Loan No</th>
                            <th>Member</th>
                            <th>Loan Type</th>
                            <th class="text-end">Principal</th>
                            <th class="text-end">Approved</th>
                            <th class="text-end">Outstanding</th>
                            <th>Application Date</th>
                            <th>Status</th>
                            <th>Progress</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model)
                        {
                            var statusColor = loan.LoanStatus switch
                            {
                                            "Draft" => "secondary",
                                            "Submitted" => "info",
                                            "UnderAppraisal" => "warning",
                                            "PendingFinalApproval" => "primary",
                                            "Approved" => "success",
                                            "Rejected" => "danger",
                                            "Disbursed" => "success",
                                            "Active" => "primary",
                                            "Closed" => "secondary",
                                            "WrittenOff" => "dark",
                                _ => "secondary"
                            };

                            var progressPercentage = loan.TotalInstallments > 0
                            ? (loan.InstallmentsPaid * 100 / loan.TotalInstallments)
                            : 0;

                            <tr>
                                <td>
                                    <strong>@loan.LoanNo</strong>
                                </td>
                                <td>
                                    <div>@loan.MemberName</div>
                                    <small class="text-muted">@loan.MemberNo</small>
                                </td>
                                <td>@loan.LoanType</td>
                                <td class="text-end">KES @loan.PrincipalAmount.ToString("N0")</td>
                                <td class="text-end">KES @(loan.ApprovedAmount > 0 ? loan.ApprovedAmount.ToString("N0") : "-")</td>
                                <td class="text-end fw-bold @(loan.OutstandingBalance > 0 ? "text-danger" : "text-success")">
                                    KES @loan.OutstandingBalance.ToString("N0")
                                </td>
                                <td>@loan.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-@statusColor status-badge">
                                        <span class="loan-status bg-white"></span>
                                        @loan.LoanStatus
                                    </span>
                                </td>
                                <td style="min-width: 120px;">
                                    @if (loan.TotalInstallments > 0)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm flex-grow-1 me-2">
                                                <div class="progress-bar bg-success"
                                                     role="progressbar"
                                                     style="width: @progressPercentage%;"
                                                     aria-valuenow="@progressPercentage"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100"></div>
                                            </div>
                                            <small>@loan.InstallmentsPaid/@loan.TotalInstallments</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not started</span>
                                    }
                                </td>
                                <td class="table-actions">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-loanNo="@loan.LoanNo"
                                           class="btn btn-sm btn-outline-primary"
                                           data-bs-toggle="tooltip"
                                           title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (loan.LoanStatus == "Draft" || loan.LoanStatus == "Submitted")
                                        {
                                            <a asp-action="Edit" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-warning"
                                               data-bs-toggle="tooltip"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }

                                        @if (loan.LoanStatus == "Submitted" && (loan.InstallmentsPaid == null || loan.InstallmentsPaid <= 0))
                                        {
                                            <a asp-action="Appraise" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-info"
                                               data-bs-toggle="tooltip"
                                               title="Appraise">
                                                <i class="bi bi-clipboard-check"></i>
                                            </a>
                                        }

                                        @if (loan.LoanStatus == "Submitted" || loan.LoanStatus == "PendingFinalApproval")
                                        {
                                            <a asp-action="Approve" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-success"
                                               data-bs-toggle="tooltip"
                                               title="Approve">
                                                <i class="bi bi-check2-circle"></i>
                                            </a>
                                        }

                                        @if (loan.LoanStatus == "Approved")
                                        {
                                            <a asp-action="Disburse" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-success"
                                               data-bs-toggle="tooltip"
                                               title="Disburse">
                                                <i class="bi bi-cash-stack"></i>
                                            </a>
                                        }

                                        @if (loan.LoanStatus == "Disbursed" || loan.LoanStatus == "Active")
                                        {
                                            <a asp-action="Repay" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-primary"
                                               data-bs-toggle="tooltip"
                                               title="Make Payment">
                                                <i class="bi bi-arrow-left-right"></i>
                                            </a>
                                        }

                                        <a asp-action="Statement" asp-route-loanNo="@loan.LoanNo"
                                           class="btn btn-sm btn-outline-secondary"
                                           data-bs-toggle="tooltip"
                                           title="View Statement">
                                            <i class="bi bi-file-text"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-files fs-1 text-muted"></i>
                <p class="text-muted mt-3">No loans found</p>
                <a asp-action="Apply" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Loan
                </a>
            </div>
        }
    </div>
</div>