@using SACCOBlockChainSystem.Models.DTOs
@model MemberContributionHistoryDTO
@{
    ViewData["Title"] = $"Contributions for {Model.MemberName}";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>
                            <i class="fas fa-history"></i> Contribution History for @Model.MemberName
                        </h4>
                        <div>
                            <a asp-action="Add" asp-route-memberNo="@Model.MemberNo"
                               class="btn btn-light btn-sm">
                                <i class="fas fa-plus"></i> Add Contribution
                            </a>
                            <a asp-controller="MemberMvc" asp-action="Details"
                               asp-route-memberNo="@Model.MemberNo"
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-user"></i> Member Details
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Member Summary -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Total Contributions</h6>
                                    <h3 class="text-success">@Model.TotalContributions.ToString("C")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Current Share Balance</h6>
                                    <h3 class="text-primary">@Model.CurrentShareBalance.ToString("C")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Number of Transactions</h6>
                                    <h3 class="text-info">@Model.Contributions.Count</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contributions Table -->
                    @if (Model.Contributions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Receipt No</th>
                                        <th>Share Type</th>
                                        <th>Amount</th>
                                        <th>Remarks</th>
                                        <th>Blockchain</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contribution in Model.Contributions)
                                    {
                                        <tr>
                                            <td>@contribution.TransactionDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-primary">@contribution.ReceiptNo</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@contribution.ShareTypeName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@contribution.Amount.ToString("C")</span>
                                            </td>
                                            <td>@contribution.Remarks</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contribution.BlockchainTxId))
                                                {
                                                    <span class="badge bg-success" title="@contribution.BlockchainTxId">
                                                        <i class="fas fa-link"></i> On Blockchain
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = contribution.ReceiptNo })"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-dark">
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td><strong>@Model.Contributions.Sum(c => c.Amount).ToString("C")</strong></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No contributions found for this member.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>