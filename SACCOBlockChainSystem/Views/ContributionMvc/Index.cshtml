@using SACCOBlockChainSystem.Models.DTOs
@model dynamic
@{
    ViewData["Title"] = "Contributions Dashboard";
    var recentContributions = Model.RecentContributions as List<ContributionResponseDTO>;
    var shareTypes = Model.ShareTypes as List<ShareTypeDTO>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6">
                    <i class="fas fa-tags"></i> Contributions Management
                </h1>
                <a asp-action="Add" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle"></i> New Contribution
                </a>
            </div>
        </div>
    </div>

    <!-- Recent Contributions Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5>
                        <i class="fas fa-history"></i> Recent Contributions (Last 30 Days)
                    </h5>
                </div>
                <div class="card-body">
                    @if (recentContributions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Member</th>
                                        <th>Receipt No</th>
                                        <th>Share Type</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contribution in recentContributions)
                                    {
                                        <tr>
                                            <td>@contribution.TransactionDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <strong>@contribution.MemberNo</strong><br/>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@contribution.ReceiptNo</span>
                                            </td>
                                            <td>@contribution.ShareTypeName</td>
                                            <td>
                                                <span class="badge bg-success">@contribution.Amount.ToString("C")</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@contribution.Id" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye">View</i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@contribution.Id" class="btn btn-warning">
                                                    <i class="fas fa-edit"></i> Edit 
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-dark">
                                        <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                        <td><strong>@recentContributions.Sum(c => c.Amount).ToString("C")</strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No contributions found in the last 30 days.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>