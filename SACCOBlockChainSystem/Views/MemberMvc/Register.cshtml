@model SACCOBlockChainSystem.Models.DTOs.MemberRegistrationDTO

@{
    ViewData["Title"] = "Register New Member";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-user-plus"></i> Member Registration</h4>
                </div>

                <div class="card-body">
                   @*  <!-- Display general validation summary at the top -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i> Please fix the following errors:
                            </h5>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Success message from TempData -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    } *@
                    <!-- Use proper ASP.NET Core form tag helper -->
                    <form asp-action="Register" asp-controller="MemberMvc" method="post" id="memberRegistrationForm">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Surname">Surname *</label>
                                    <input asp-for="Surname" class="form-control" required />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OtherNames">Other Names *</label>
                                    <input asp-for="OtherNames" class="form-control" required />
                                    <span asp-validation-for="OtherNames" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdNo">ID Number *</label>
                                    <input asp-for="IdNo" class="form-control" required />
                                    <span asp-validation-for="IdNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNo">Phone Number *</label>
                                    <input asp-for="PhoneNo" class="form-control" required />
                                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email">Email Address</label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            @* <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="InitialShares">Initial Shares (KES) *</label>
                                    <input asp-for="InitialShares" type="number" min="1000" step="100"
                                           class="form-control" required value="1000" />
                                    <small class="form-text text-muted">Minimum 1000 KES</small>
                                </div>
                            </div> *@
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth">Date of Birth</label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gender">Gender</label>
                                    <select asp-for="Gender" class="form-control">
                                        <option value="">Select Gender</option>
                                        <option value="M">Male</option>
                                        <option value="F">Female</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" asp-for="CompanyCode" value="DEFAULT" />
                        <input type="hidden" asp-for="CreatedBy" value="@User.Identity.Name" />

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Register Member
                            </button>
                            <a asp-action="Index" asp-controller="MemberMvc" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Blockchain Status Panel -->
            <div class="card mt-4" id="blockchainStatus" style="display: none;">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-link"></i> Blockchain Processing</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Processing...</span>
                        </div>
                        <p class="mt-3" id="blockchainMessage">Adding transaction to blockchain...</p>
                        <div class="progress mt-3">
                            <div id="blockchainProgress" class="progress-bar progress-bar-striped progress-bar-animated"
                                 role="progressbar" style="width: 0%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Result Panel -->
            <div class="card mt-4" id="resultPanel" style="display: none;">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-check-circle"></i> Registration Successful</h5>
                </div>
                <div class="card-body">
                    <div id="registrationResult"></div>
                    <button class="btn btn-outline-primary mt-3" onclick="printMemberDetails()">
                        <i class="fas fa-print"></i> Print Details
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {



            // Helper function to serialize form to object (keep if needed for AJAX)
            $.fn.serializeObject = function() {
                var o = {};
                var a = this.serializeArray();
                $.each(a, function() {
                    if (o[this.name] !== undefined) {
                        if (!o[this.name].push) {
                            o[this.name] = [o[this.name]];
                        }
                        o[this.name].push(this.value || '');
                    } else {
                        o[this.name] = this.value || '';
                    }
                });
                return o;
            };
        });

        function updateProgress(percent) {
            $('#blockchainProgress').css('width', percent + '%').text(percent + '%');
        }

        function showRegistrationResult(data) {
            var html = `
                <h6>Member Details:</h6>
                <table class="table table-bordered">
                    <tr><th>Member Number:</th><td>${data.memberNo}</td></tr>
                    <tr><th>Full Name:</th><td>${data.fullName}</td></tr>
                    <tr><th>Status:</th><td><span class="badge bg-success">${data.status}</span></td></tr>
                    <tr><th>Registration Date:</th><td>${new Date(data.registrationDate).toLocaleString()}</td></tr>
                    <tr><th>Initial Shares:</th><td>KES ${data.shareBalance.toLocaleString()}</td></tr>
                    <tr><th>Blockchain TX ID:</th><td><code>${data.blockchainTxId}</code></td></tr>
                </table>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Member registered successfully and transaction recorded on blockchain.
                    <a href="/Blockchain/Verify/${data.blockchainTxId}" target="_blank" class="alert-link">
                        Verify on Blockchain Explorer
                    </a>
                </div>
            `;

            $('#registrationResult').html(html);
            $('#resultPanel').show();
        }

        function printMemberDetails() {
            window.print();
        }
    </script>
}