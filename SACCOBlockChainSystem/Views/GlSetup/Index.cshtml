@model SACCOBlockChainSystem.Models.GlSetup

@{
    ViewData["Title"] = "Account Setup";
}

<h3 style="color:orange;">Account Setup</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Save" method="post" id="glSetupForm">
    <input type="hidden" asp-for="GlId" />

    <table cellpadding="5" cellspacing="5" style="width:100%;">
        <tr>
            <td>Account Type:</td>
            <td>
                <select asp-for="Type" id="accountType" class="form-control" required>
                    <option value="">-- Select Account Type --</option>
                    @if (ViewBag.AccountTypes != null)
                    {
                        foreach (var type in ViewBag.AccountTypes)
                        {
                            <option value="@type.Type">@type.Type</option>
                        }
                    }
                </select>
            </td>
            <td>Account Group:</td>
            <td>
                <select asp-for="GlAccMainGroup" id="accountGroup" class="form-control" required>
                    <option value="">-- Select Account Group --</option>
                </select>
            </td>
            <td>Normal Balance:</td>
            <td>
                <input asp-for="Normalbal" id="normalBalance" class="form-control" readonly />
            </td>
        </tr>
        <tr>
            <td>Account No:</td>
            <td>
                <input asp-for="AccNo" class="form-control" required />
            </td>
            <td>Account Name:</td>
            <td colspan="3">
                <input asp-for="Glaccname" style="width:95%;" class="form-control" required />
            </td>
        </tr>
        <tr>
            <td>A/C Sub Group:</td>
            <td>
                <input asp-for="Glaccgroup" class="form-control" placeholder="Optional" />
            </td>
            <td>Currency:</td>
            <td>
                <select asp-for="Curr" class="form-control">
                    <option value="">-- Select Currency --</option>
                    @if (ViewBag.Currencies != null)
                    {
                        foreach (var currency in ViewBag.Currencies)
                        {
                            <option value="@currency.Code">@currency.Code - @currency.Name</option>
                        }
                    }
                </select>
            </td>
            <td>Balance As At:</td>
            <td>
                <input asp-for="TransDate" type="date" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>A/C Category:</td>
            <td>
                <select asp-for="AccCategory" class="form-control">
                    <option value="">-- Select Category --</option>
                    @if (ViewBag.AccountCategories != null)
                    {
                        foreach (var cat in ViewBag.AccountCategories)
                        {
                            <option value="@cat.Name">@cat.Name</option>
                        }
                    }
                </select>
            </td>
            <td>Opening Balance:</td>
            <td>
                <input asp-for="OpeningBal" class="form-control" type="number" step="0.01" placeholder="0.00" />
            </td>
            <td>Sub Category:</td>
            <td>
                <select asp-for="SubType" class="form-control">
                    <option value="">-- Select Sub Category --</option>
                    @if (ViewBag.SubCategories != null)
                    {
                        foreach (var sub in ViewBag.SubCategories)
                        {
                            <option value="@sub.Name">@sub.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>Company Code:</td>
            <td colspan="3">
                <input asp-for="CompanyCode" style="width:98%;" class="form-control" placeholder="001" />
            </td>
            <td colspan="2">
                <input asp-for="IsSuspense" type="checkbox" /> Is Suspense A/C
                &nbsp;&nbsp;&nbsp;
                <input asp-for="IsREarning" type="checkbox" /> Is Retained Earnings A/C
            </td>
        </tr>
    </table>

    <br />

    <div style="text-align:center;">
        <button type="submit" formaction="/GlSetup/Save" class="btn btn-primary">Save</button>
        <button type="submit" formaction="/GlSetup/Update" class="btn btn-warning">Update</button>
        <button type="submit" formaction="/GlSetup/Delete" class="btn btn-danger" id="deleteBtn">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
    </div>
</form>

<hr />

<h4>Chart of Accounts</h4>

<table border="1" cellpadding="5" cellspacing="0" width="100%" style="border-collapse:collapse;">
    <thead style="background-color:#3f2b96;color:white;">
        <tr>
            <th>Account No</th>
            <th>Account Name</th>
            <th>Account Type</th>
            <th>Account Group</th>
            <th>Normal Balance</th>
            <th>Category</th>
            <th>Currency</th>
            <th>Company Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Accounts != null && ((IEnumerable<dynamic>)ViewBag.Accounts).Any())
        {
            foreach (var account in ViewBag.Accounts)
            {
                <tr>
                    <td>@account.AccNo</td>
                    <td>@account.Glaccname</td>
                    <td>@account.Type</td>
                    <td>@account.GlAccMainGroup</td>
                    <td style="text-align:center; font-weight:bold; color:@(account.Normalbal == "DR" ? "#28a745" : "#dc3545")">
                        @account.Normalbal
                    </td>
                    <td>@account.AccCategory</td>
                    <td>@account.Curr</td>
                    <td>@account.CompanyCode</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = account.GlId })" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" style="text-align:center; padding:20px;">
                    <em>No accounts found. Please add your first account.</em>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Load account groups when account type changes
            $('#accountType').change(function() {
                var accountType = $(this).val();
                var groupDropdown = $('#accountGroup');
                var normalBalanceField = $('#normalBalance');

                groupDropdown.empty();
                groupDropdown.append('<option value="">-- Select Account Group --</option>');
                normalBalanceField.val('');

                if (accountType) {
                    $.getJSON('/GlSetup/GetGroupsByType', { accountType: accountType }, function(data) {
                        $.each(data, function(i, group) {
                            var option = $('<option></option>')
                                .attr('value', group.name)
                                .text(group.name)
                                .data('normalBalance', group.normalBalance);
                            groupDropdown.append(option);
                        });
                    }).fail(function(jqXHR, textStatus, errorThrown) {
                        console.error('Error loading groups:', textStatus, errorThrown);
                        alert('Error loading account groups. Please refresh the page.');
                    });
                }
            });

            // Set normal balance when account group is selected
            $('#accountGroup').change(function() {
                var selectedOption = $(this).find('option:selected');
                var normalBalance = selectedOption.data('normalbalance');
                $('#normalBalance').val(normalBalance || '');
            });

            // Handle Save button
            $('button[formaction="/GlSetup/Save"]').click(function(e) {
                e.preventDefault();

                var accNo = $('#AccNo').val();
                var accName = $('#Glaccname').val();
                var accType = $('#accountType').val();
                var accGroup = $('#accountGroup').val();

                if (!accNo || !accNo.trim()) {
                    alert('Account Number is required.');
                    return false;
                }
                if (!accName || !accName.trim()) {
                    alert('Account Name is required.');
                    return false;
                }
                if (!accType) {
                    alert('Please select an Account Type.');
                    return false;
                }
                if (!accGroup) {
                    alert('Please select an Account Group.');
                    return false;
                }

                $('#glSetupForm').attr('action', '/GlSetup/Save');
                $('#glSetupForm').submit();
            });

            // Handle Update button
            $('button[formaction="/GlSetup/Update"]').click(function(e) {
                e.preventDefault();

                var glId = $('#GlId').val();
                if (!glId || glId === '0' || glId === '') {
                    alert('Please select an account to update by clicking Edit on an existing account.');
                    return false;
                }

                $('#glSetupForm').attr('action', '/GlSetup/Update');
                $('#glSetupForm').submit();
            });

            // Handle Delete button
            $('#deleteBtn').click(function(e) {
                e.preventDefault();

                var glId = $('#GlId').val();
                if (!glId || glId === '0' || glId === '') {
                    alert('Please select an account to delete by clicking Edit on an existing account.');
                    return false;
                }

                if (confirm('Are you sure you want to delete this account? This action cannot be undone.')) {
                    var form = $('<form method="post" action="/GlSetup/Delete"></form>');
                    form.append($('<input type="hidden" name="glId" value="' + glId + '"/>'));
                    form.append('@Html.AntiForgeryToken()');
                    $('body').append(form);
                    form.submit();
                }
            });

            // Auto-clear alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // If editing, trigger the account type change to load groups
            var selectedAccountType = $('#accountType').val();
            var selectedAccountGroup = '@Model?.GlAccMainGroup';

            if (selectedAccountType) {
                $('#accountType').trigger('change');

                // Wait for groups to load then set the selected group
                setTimeout(function() {
                    if (selectedAccountGroup) {
                        $('#accountGroup').val(selectedAccountGroup).trigger('change');
                    }
                }, 500);
            }
        });
    </script>
}

