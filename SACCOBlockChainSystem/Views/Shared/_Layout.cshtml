    <script>
        // Function to get page icon based on controller/action
        function getPageIcon() {
            const controller = '@ViewContext.RouteData.Values["Controller"]';
            const action = '@ViewContext.RouteData.Values["Action"]';

            if (controller === 'Home') return 'fa-tachometer-alt';
            if (controller === 'Member') return 'fa-users';
            if (controller === 'TransactionsMvc') {
                if (action === 'Deposit') return 'fa-money-bill-wave';
                if (action === 'Withdraw') return 'fa-hand-holding-usd';
                if (action === 'History') return 'fa-history';
                if (action === 'Balance') return 'fa-balance-scale';
            }
            if (controller === 'Loan') return 'fa-file-contract';
            if (controller === 'Share') return 'fa-chart-line';
            if (controller === 'Blockchain') return 'fa-link';
            if (controller === 'Reports') return 'fa-chart-bar';
            if (controller === 'Admin') return 'fa-cogs';
            return 'fa-file';
        }

        // Update page title icon
        document.addEventListener('DOMContentLoaded', function() {
            const pageIcon = document.querySelector('.page-title i');
            if (pageIcon) {
                pageIcon.className = 'fas ' + getPageIcon() + ' me-2';
            }

            // Load blockchain stats
            loadBlockchainStats();
            setInterval(loadBlockchainStats, 30000); // Update every 30 seconds
        });

        function loadBlockchainStats() {
            // Fetch blockchain status
            fetch('/api/Blockchain/Status')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('blockchainStatus').textContent = data.status;
                        document.getElementById('transactionCount').textContent = data.totalTransactions;
                        document.getElementById('lastSyncTime').textContent = new Date(data.lastSync).toLocaleTimeString();

                        // Update pending loans count for admin
                        if (data.pendingLoans) {
                            document.getElementById('pendingLoansCount').textContent = data.pendingLoans;
                        }
                    }
                })
                .catch(error => {
                    console.error('Error loading blockchain stats:', error);
                });
        }
                    $(document).ready(function() {
                        // Initialize menu collapse/expand
                        $('[data-lte-toggle="treeview"]').on('click', function(e) {
                            if ($(e.target).closest('a').attr('href') === '#') {
                                e.preventDefault();
                                const parent = $(e.target).closest('.nav-item');
                                const isOpen = parent.hasClass('menu-open');

                                // Close all other menus
                                $('.nav-item.menu-open').not(parent).removeClass('menu-open')
                                    .find('.nav-treeview').slideUp();

                                // Toggle current menu
                                if (isOpen) {
                                    parent.removeClass('menu-open');
                                    parent.find('.nav-treeview').slideUp();
                                } else {
                                    parent.addClass('menu-open');
                                    parent.find('.nav-treeview').slideDown();
                                }
                            }
                        });

                        // Highlight active menu item
                        function highlightActiveMenu() {
                            const currentUrl = window.location.pathname.toLowerCase();

                            $('.nav-link').each(function() {
                                const $this = $(this);
                                const href = $this.attr('href');

                                if (href && href !== '#' && currentUrl.includes(href.toLowerCase())) {
                                    $this.addClass('active');
                                    $this.closest('.nav-item.menu-open').addClass('menu-open');
                                    $this.closest('.nav-treeview').show();
                                }
                            });
                        }

                        highlightActiveMenu();

                        // Update pending loans count for admin
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                                            <text>
