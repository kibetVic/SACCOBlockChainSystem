@model SACCOBlockChainSystem.Models.DTOs.LoanAppraisalDTO
@{
    ViewData["Title"] = "Appraise Loan";
    var loanNo = ViewBag.LoanNo as string;
    var loanDetails = ViewBag.LoanDetails as SACCOBlockChainSystem.Models.DTOs.LoanDetailsResponseDTO;
}

<div class="card">
    <div class="card-header bg-warning">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-clipboard-check"></i> Loan Appraisal - @loanNo</h4>
            <partial name="_LoanStatusBadge" model="@loanDetails?.StatusCode" />
        </div>
    </div>
    <div class="card-body">
        <!-- Progress Tracker -->
        <div class="progress-tracker mb-5">
            <div class="step completed">
                <div class="step-number">1</div>
                <div class="step-title">Application</div>
                <div class="step-line"></div>
            </div>
            <div class="step completed">
                <div class="step-number">2</div>
                <div class="step-title">Guarantors</div>
                <div class="step-line"></div>
            </div>
            <div class="step active">
                <div class="step-number">3</div>
                <div class="step-title">Appraisal</div>
                <div class="step-line"></div>
            </div>
            <div class="step">
                <div class="step-number">4</div>
                <div class="step-title">Endorsement</div>
                <div class="step-line"></div>
            </div>
            <div class="step">
                <div class="step-number">5</div>
                <div class="step-title">Disbursement</div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Loan Summary -->
            <div class="col-md-5">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-info-square"></i> Loan Summary</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="50%">Member:</th>
                                <td>@loanDetails?.MemberName</td>
                            </tr>
                            <tr>
                                <th>Member No:</th>
                                <td>@loanDetails?.MemberNo</td>
                            </tr>
                            <tr>
                                <th>Applied Amount:</th>
                                <td class="text-end">@loanDetails?.AppliedAmount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Repayment Period:</th>
                                <td class="text-end">@loanDetails?.RepayPeriod months</td>
                            </tr>
                            <tr>
                                <th>Purpose:</th>
                                <td>@loanDetails?.Purpose</td>
                            </tr>
                            <tr>
                                <th>Share Balance:</th>
                                <td class="text-end">@(loanDetails?.ShareBalance?.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Total Guarantee:</th>
                                <td class="text-end">@(loanDetails?.TotalGuarantee?.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>No. of Guarantors:</th>
                                <td class="text-end">@(loanDetails?.Guarantors.Count ?? 0)</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-lightbulb"></i> Appraisal Guidelines</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h6><i class="bi bi-check-circle"></i> Checkpoints:</h6>
                            <ul class="mb-0">
                                <li>Verify member's share balance</li>
                                <li>Confirm guarantor eligibility</li>
                                <li>Assess repayment capacity</li>
                                <li>Review purpose suitability</li>
                                <li>Check credit history</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Appraisal Form -->
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-clipboard-data"></i> Appraisal Form</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Appraise" method="post" id="appraisalForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="LoanNo" value="@loanNo" />
                            <input type="hidden" asp-for="AppraisalBy" value="@User.Identity?.Name" />

                            <div class="mb-3">
                                <label asp-for="Recommendation" class="form-label">Recommendation *</label>
                                <select asp-for="Recommendation" class="form-select" required>
                                    <option value="">-- Select Recommendation --</option>
                                    <option value="APPROVE">Approve</option>
                                    <option value="APPROVE_WITH_CONDITIONS">Approve with Conditions</option>
                                    <option value="HOLD">Hold for Review</option>
                                    <option value="REJECT">Reject</option>
                                </select>
                                <small class="form-text text-muted">Your professional recommendation for this loan</small>
                                <span asp-validation-for="Recommendation" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Comments" class="form-label">Appraisal Comments *</label>
                                <textarea asp-for="Comments" class="form-control" rows="4" required
                                          placeholder="Provide detailed appraisal comments, observations, and justification for your recommendation..."></textarea>
                                <small class="form-text text-muted">Minimum 50 characters</small>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="RecommendedAmount" class="form-label">Recommended Amount</label>
                                        <div class="input-group">
                                            <span class="input-group-text">KES</span>
                                            <input asp-for="RecommendedAmount" class="form-control"
                                                   type="number" step="100" min="0"
                                                   placeholder="Leave unchanged if appropriate" />
                                        </div>
                                        <small class="form-text text-muted">Original: @loanDetails?.AppliedAmount.ToString("C")</small>
                                        <span asp-validation-for="RecommendedAmount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="RecommendedPeriod" class="form-label">Recommended Period (Months)</label>
                                        <input asp-for="RecommendedPeriod" class="form-control"
                                               type="number" min="1" max="120"
                                               placeholder="Original: @loanDetails?.RepayPeriod" />
                                        <span asp-validation-for="RecommendedPeriod" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="InterestRate" class="form-label">Interest Rate (%)</label>
                                        <div class="input-group">
                                            <input asp-for="InterestRate" class="form-control"
                                                   type="number" step="0.01" min="0" max="100" />
                                            <span class="input-group-text">%</span>
                                        </div>
                                        <span asp-validation-for="InterestRate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="ProcessingFee" class="form-label">Processing Fee</label>
                                        <div class="input-group">
                                            <span class="input-group-text">KES</span>
                                            <input asp-for="ProcessingFee" class="form-control"
                                                   type="number" step="100" min="0" />
                                        </div>
                                        <span asp-validation-for="ProcessingFee" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Important:</strong> This appraisal will be recorded on the blockchain and cannot be modified later.
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-loanNo="@loanNo" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Details
                                </a>
                                <button type="submit" class="btn btn-warning" id="submitBtn">
                                    <i class="bi bi-check-circle"></i> Submit Appraisal
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Risk Assessment -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-shield-exclamation"></i> Risk Assessment</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk1">
                                    <label class="form-check-label" for="risk1">
                                        Member has good repayment history
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk2">
                                    <label class="form-check-label" for="risk2">
                                        Adequate share capital
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk3">
                                    <label class="form-check-label" for="risk3">
                                        Sufficient guarantor coverage
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk4">
                                    <label class="form-check-label" for="risk4">
                                        Clear purpose of loan
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk5">
                                    <label class="form-check-label" for="risk5">
                                        Realistic repayment plan
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="risk6">
                                    <label class="form-check-label" for="risk6">
                                        No outstanding loan defaults
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            const appraisalForm = $('#appraisalForm');
            const submitBtn = $('#submitBtn');
            const commentsInput = $('#Comments');

            // Form validation
            appraisalForm.on('submit', function(e) {
                const recommendation = $('#Recommendation').val();
                const comments = commentsInput.val();

                if (!recommendation) {
                    e.preventDefault();
                    alert('Please select a recommendation.');
                    return false;
                }

                if (!comments || comments.length < 50) {
                    e.preventDefault();
                    alert('Please provide detailed appraisal comments (minimum 50 characters).');
                    return false;
                }

                // Show loading
                submitBtn.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Submitting...');
                submitBtn.prop('disabled', true);
            });

            // Character count for comments
            commentsInput.on('input', function() {
                const count = $(this).val().length;
                const min = 50;

                if (count < min) {
                    $(this).addClass('is-invalid');
                    $(this).next('.form-text').html(`<span class="text-danger">${count}/${min} characters (minimum required)</span>`);
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.form-text').html(`<span class="text-success">${count}/${min} characters ✓</span>`);
                }
            });

            // Auto-populate appraisal by
            $('#AppraisalBy').val('@User.Identity?.Name');
        });
    </script>
}