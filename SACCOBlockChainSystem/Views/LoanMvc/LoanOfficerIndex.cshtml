@model List<SACCOBlockChainSystem.Models.DTOs.LoanListResponseDTO>
@using SACCOBlockChainSystem.Extensions

@{
    ViewData["Title"] = "Loan Management Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-speedometer2"></i> Loan Management Dashboard</h2>
    <div>
        <a asp-action="Search" class="btn btn-outline-primary">
            <i class="bi bi-search"></i> Search Loans
        </a>
        <a asp-action="Portfolio" class="btn btn-outline-success ms-2">
            <i class="bi bi-graph-up"></i> Portfolio Report
        </a>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Pending Review</h5>
                <h2 class="card-text">@Model.Count(l => l.Status == "Pending")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Awaiting Guarantors</h5>
                <h2 class="card-text">@Model.Count(l => l.Status == "Guarantors")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-purple text-white">
            <div class="card-body">
                <h5 class="card-title">Ready for Appraisal</h5>
                <h2 class="card-text">@Model.Count(l => l.Status == "Appraisal")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-orange text-white">
            <div class="card-body">
                <h5 class="card-title">Pending Endorsement</h5>
                <h2 class="card-text">@Model.Count(l => l.Status == "Endorsement")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Recent Loans -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Recent Loan Applications</h5>
        <a asp-action="Search" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No loan applications found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loan No</th>
                            <th>Member</th>
                            <th>Member No</th>
                            <th>Loan Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Application Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model.Take(10))
                        {
                            <tr>
                                <td><strong>@loan.LoanNo</strong></td>
                                <td>@loan.MemberName.Truncate(20)</td>
                                <td>@loan.MemberNo</td>
                                <td>@loan.LoanType</td>
                                <td>@loan.AppliedAmount.ToString("C")</td>
                                <td>
                                    @if (loan.Status == "Pending")
                                    {
                                        <a asp-action="Appraise" asp-route-loanNo="@loan.LoanNo" class="badge bg-warning text-decoration-none">@loan.Status</a>
                                    }
                                    else if (loan.Status == "Guarantors")
                                    {
                                        <a asp-action="Guarantors" asp-route-loanNo="@loan.LoanNo" class="badge bg-info text-decoration-none">@loan.Status</a>
                                    }
                                    else if (loan.Status == "Appraisal")
                                    {
                                        <a asp-action="Appraise" asp-route-loanNo="@loan.LoanNo" class="badge bg-purple text-decoration-none">@loan.Status</a>
                                    }
                                    else if (loan.Status == "Endorsement")
                                    {
                                        <a asp-action="Endorse" asp-route-loanNo="@loan.LoanNo" class="badge bg-orange text-decoration-none">@loan.Status</a>
                                    }
                                    else if (loan.Status == "Approved")
                                    {
                                        <a asp-action="Disburse" asp-route-loanNo="@loan.LoanNo" class="badge bg-success text-decoration-none">@loan.Status</a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@loan.Status</span>
                                    }
                                </td>
                                <td>@loan.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-loanNo="@loan.LoanNo"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (loan.Status == "Pending" || loan.Status == "Guarantors")
                                        {
                                            <a asp-action="Appraise" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-warning" title="Appraise">
                                                <i class="bi bi-clipboard-check"></i>
                                            </a>
                                        }
                                        @if (loan.Status == "Approved")
                                        {
                                            <a asp-action="Disburse" asp-route-loanNo="@loan.LoanNo"
                                               class="btn btn-sm btn-outline-success" title="Disburse">
                                                <i class="bi bi-cash-coin"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .bg-orange {
        background-color: #fd7e14 !important;
    }
</style>