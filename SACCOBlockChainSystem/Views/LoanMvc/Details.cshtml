@model SACCOBlockChainSystem.Models.DTOs.LoanDetailsResponseDTO
@{
    ViewData["Title"] = "Loan Details - " + Model.LoanNo;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-file-text"></i> Loan Details: @Model.LoanNo</h4>
        <div>
            <partial name="_LoanStatusBadge" model="@Model.StatusCode" />
        </div>
    </div>
    <div class="card-body">
        <!-- Loan Progress Tracker -->
        <div class="progress-tracker mb-5">
            @{
                var steps = new[] { "Application", "Guarantors", "Appraisal", "Endorsement", "Disbursement" };
                var currentStep = Model.StatusCode switch
                {
                    1 => 1, // Pending
                    2 => 2, // Guarantors
                    3 => 3, // Appraisal
                    4 => 4, // Endorsement
                    5 => 5, // Approved
                    6 => 5, // Disbursed
                    7 => 1, // Rejected (back to start)
                    8 => 5, // Closed (completed)
                    _ => 1
                };
            }

            @for (int i = 1; i <= 5; i++)
            {
                <div class="step @(i == currentStep ? "active" : (i < currentStep ? "completed" : ""))">
                    <div class="step-number">@i</div>
                    <div class="step-title">@steps[i - 1]</div>
                    @if (i < 5)
                    {
                        <div class="step-line"></div>
                    }
                </div>
            }
        </div>

        <div class="row">
            <!-- Left Column: Loan Information -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-info-circle"></i> Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Loan Number:</th>
                                <td><strong>@Model.LoanNo</strong></td>
                            </tr>
                            <tr>
                                <th>Member:</th>
                                <td>@Model.MemberName (@Model.MemberNo)</td>
                            </tr>
                            <tr>
                                <th>Loan Type:</th>
                                <td>@Model.LoanType (@Model.LoanCode)</td>
                            </tr>
                            <tr>
                                <th>Application Date:</th>
                                <td>@Model.ApplicationDate.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <th>Purpose:</th>
                                <td>@Model.Purpose</td>
                            </tr>
                            <tr>
                                <th>Repayment Period:</th>
                                <td>@Model.RepayPeriod months</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-cash-stack"></i> Financial Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Applied Amount:</th>
                                <td class="text-end">@Model.AppliedAmount.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Approved Amount:</th>
                                <td class="text-end">@(Model.ApprovedAmount?.ToString("C") ?? "Pending")</td>
                            </tr>
                            <tr>
                                <th>Disbursed Amount:</th>
                                <td class="text-end">@(Model.DisbursedAmount?.ToString("C") ?? "Not Disbursed")</td>
                            </tr>
                            <tr>
                                <th>Current Balance:</th>
                                <td class="text-end">@(Model.LoanBalance?.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Interest Balance:</th>
                                <td class="text-end">@(Model.InterestBalance?.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Share Balance:</th>
                                <td class="text-end">@(Model.ShareBalance?.ToString("C") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Total Guarantee:</th>
                                <td class="text-end">@(Model.TotalGuarantee?.ToString("C") ?? "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Right Column: Actions & Transactions -->
            <div class="col-md-6">
                <!-- Action Buttons -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-lightning-charge"></i> Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (Model.StatusCode == 1 || Model.StatusCode == 2) // Pending or Guarantors
                            {
                                <a asp-action="Guarantors" asp-route-loanNo="@Model.LoanNo"
                                   class="btn btn-info">
                                    <i class="bi bi-people"></i> Manage Guarantors
                                </a>

                                @if (User.HasClaim("Role", "LoanOfficer"))
                                {
                                    <a asp-action="Appraise" asp-route-loanNo="@Model.LoanNo"
                                       class="btn btn-warning">
                                        <i class="bi bi-clipboard-check"></i> Appraise Loan
                                    </a>
                                }
                            }

                            @if (Model.StatusCode == 3) // Appraisal
                            {
                                @if (User.HasClaim("Role", "LoanCommittee"))
                                {
                                    <a asp-action="Endorse" asp-route-loanNo="@Model.LoanNo"
                                       class="btn btn-success">
                                        <i class="bi bi-check-all"></i> Endorse Loan
                                    </a>
                                }
                            }

                            @if (Model.StatusCode == 5) // Approved
                            {
                                @if (User.HasClaim("Role", "Treasurer"))
                                {
                                    <a asp-action="Disburse" asp-route-loanNo="@Model.LoanNo"
                                       class="btn btn-primary">
                                        <i class="bi bi-cash-coin"></i> Disburse Loan
                                    </a>
                                }
                            }

                            @if (Model.StatusCode == 6) // Disbursed
                            {
                                <a asp-action="Repay" asp-route-loanNo="@Model.LoanNo"
                                   class="btn btn-success">
                                    <i class="bi bi-cash"></i> Make Repayment
                                </a>
                            }

                            <a asp-action="Guarantors" asp-route-loanNo="@Model.LoanNo"
                               class="btn btn-outline-info">
                                <i class="bi bi-shield-check"></i> View Guarantors
                            </a>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Recent Transactions</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Transactions.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var transaction in Model.Transactions.Take(5))
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">@transaction.Description</h6>
                                                <small class="text-muted">
                                                    @transaction.TransactionDate.ToString("dd/MM/yyyy HH:mm")
                                                    @if (!string.IsNullOrEmpty(transaction.PerformedBy))
                                                    {
                                                        <text> • By @transaction.PerformedBy</text>
                                                    }
                                                </small>
                                            </div>
                                            @if (transaction.Amount.HasValue && transaction.Amount > 0)
                                            {
                                                <span class="badge bg-primary rounded-pill">
                                                    @transaction.Amount.Value.ToString("C")
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(transaction.BlockchainTxId))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-link-45deg"></i>
                                                Blockchain: @transaction.BlockchainTxId.Substring(0, 8)...
                                            </small>
                                        }
                                    </div>
                                }
                            </div>

                            @if (Model.Transactions.Count > 5)
                            {
                                <div class="text-center mt-3">
                                    <a href="#allTransactions" class="btn btn-sm btn-outline-primary"
                                       data-bs-toggle="collapse">
                                        Show All (@Model.Transactions.Count) Transactions
                                    </a>
                                </div>

                                <div class="collapse mt-3" id="allTransactions">
                                    <div class="list-group list-group-flush">
                                        @foreach (var transaction in Model.Transactions.Skip(5))
                                        {
                                            <div class="list-group-item">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h6 class="mb-1">@transaction.Description</h6>
                                                        <small class="text-muted">
                                                            @transaction.TransactionDate.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    </div>
                                                    @if (transaction.Amount.HasValue)
                                                    {
                                                        <span class="badge bg-primary rounded-pill">
                                                            @transaction.Amount.Value.ToString("C")
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> No transactions recorded yet.
                            </div>
                        }
                    </div>
                </div>

                <!-- Blockchain Info -->
                @if (!string.IsNullOrEmpty(Model.BlockchainTxId))
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0"><i class="bi bi-link-45deg"></i> Blockchain Verification</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle-fill"></i>
                                <strong>Verified on Blockchain</strong><br>
                                Transaction ID: @Model.BlockchainTxId<br>
                                <small class="text-muted">This loan record is securely stored on the blockchain</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-collapse transactions after 10 seconds
            setTimeout(function() {
                $('#allTransactions').collapse('hide');
            }, 10000);
        });
    </script>
}