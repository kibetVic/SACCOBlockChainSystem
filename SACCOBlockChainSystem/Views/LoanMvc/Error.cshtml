@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="display-1 text-danger">Error</h1>
    <h2 class="text-muted">An error occurred while processing your request.</h2>

    <div class="alert alert-danger mt-4" style="max-width: 600px; margin: 0 auto;">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Oops! Something went wrong.</strong>
        <p class="mb-0">We're sorry for the inconvenience. Please try again later or contact support if the problem persists.</p>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Go to Homepage
        </a>
        <a asp-controller="LoanMvc" asp-action="Index" class="btn btn-outline-primary ms-2">
            <i class="bi bi-arrow-left"></i> Back to Loans
        </a>
        <button onclick="history.back()" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-arrow-90deg-left"></i> Go Back
        </button>
    </div>
</div>