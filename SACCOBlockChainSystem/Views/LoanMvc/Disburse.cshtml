@model SACCOBlockChainSystem.Models.DTOs.LoanDisbursementDTO
@{
    ViewData["Title"] = "Disburse Loan";
    var loanNo = ViewBag.LoanNo as string;
    var loanDetails = ViewBag.LoanDetails as SACCOBlockChainSystem.Models.DTOs.LoanDetailsResponseDTO;
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-cash-coin"></i> Loan Disbursement - @loanNo</h4>
            <partial name="_LoanStatusBadge" model="@loanDetails?.StatusCode" />
        </div>
    </div>
    <div class="card-body">
        <!-- Progress Tracker -->
        <div class="progress-tracker mb-5">
            <div class="step completed">
                <div class="step-number">1</div>
                <div class="step-title">Application</div>
                <div class="step-line"></div>
            </div>
            <div class="step completed">
                <div class="step-number">2</div>
                <div class="step-title">Guarantors</div>
                <div class="step-line"></div>
            </div>
            <div class="step completed">
                <div class="step-number">3</div>
                <div class="step-title">Appraisal</div>
                <div class="step-line"></div>
            </div>
            <div class="step completed">
                <div class="step-number">4</div>
                <div class="step-title">Endorsement</div>
                <div class="step-line"></div>
            </div>
            <div class="step active">
                <div class="step-number">5</div>
                <div class="step-title">Disbursement</div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Loan Summary -->
            <div class="col-md-5">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-file-text"></i> Approved Loan Details</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="50%">Member:</th>
                                <td>@loanDetails?.MemberName</td>
                            </tr>
                            <tr>
                                <th>Member No:</th>
                                <td>@loanDetails?.MemberNo</td>
                            </tr>
                            <tr>
                                <th>Approved Amount:</th>
                                <td class="text-end text-success">
                                    <strong>@(loanDetails?.ApprovedAmount?.ToString("C") ?? loanDetails?.AppliedAmount.ToString("C"))</strong>
                                </td>
                            </tr>
                            <tr>
                                <th>Repayment Period:</th>
                                <td class="text-end">@loanDetails?.RepayPeriod months</td>
                            </tr>
                            <tr>
                                <th>Purpose:</th>
                                <td>@loanDetails?.Purpose</td>
                            </tr>
                            <tr>
                                <th>Approval Date:</th>
                                <td>
                                    @if (loanDetails?.Transactions != null)
                                    {
                                        var endorsement = loanDetails.Transactions
                                        .FirstOrDefault(t => t.TransactionType == "ENDORSEMENT");
                                        if (endorsement != null)
                                        {
                                            @endorsement.TransactionDate.ToString("dd/MM/yyyy")
                                        }
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-shield-check"></i> Guarantee Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success">
                            <h6><i class="bi bi-check-circle-fill"></i> Guarantee Requirements Met</h6>
                            <table class="table table-sm mb-0">
                                <tr>
                                    <td>Required Guarantee (50%):</td>
                                    <td class="text-end">@((loanDetails?.ApprovedAmount * 0.5m)?.ToString("C") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td>Total Guarantee Provided:</td>
                                    <td class="text-end">@(loanDetails?.TotalGuarantee?.ToString("C") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td>Number of Guarantors:</td>
                                    <td class="text-end">@(loanDetails?.Guarantors.Count ?? 0)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-lightbulb"></i> Disbursement Checklist</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="check1" checked>
                            <label class="form-check-label" for="check1">
                                Loan approval confirmed
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="check2" checked>
                            <label class="form-check-label" for="check2">
                                Guarantee requirements met
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="check3">
                            <label class="form-check-label" for="check3">
                                Disbursement authorization verified
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="check4">
                            <label class="form-check-label" for="check4">
                                Payment method confirmed
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="check5">
                            <label class="form-check-label" for="check5">
                                All documentation complete
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Disbursement Form -->
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-cash-stack"></i> Disbursement Details</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Disburse" method="post" id="disbursementForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="LoanNo" value="@loanNo" />
                            <input type="hidden" asp-for="ProcessedBy" value="@User.Identity?.Name" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Amount" class="form-label">Disbursement Amount *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">KES</span>
                                            <input asp-for="Amount" class="form-control"
                                                   type="number" step="100" min="0"
                                                   value="@loanDetails?.ApprovedAmount"
                                                   required readonly />
                                        </div>
                                        <small class="form-text text-muted">Approved amount</small>
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="DisbursementDate" class="form-label">Disbursement Date *</label>
                                        <input asp-for="DisbursementDate" class="form-control"
                                               type="date"
                                               value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                               required />
                                        <span asp-validation-for="DisbursementDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="PaymentMethod" class="form-label">Payment Method *</label>
                                        <select asp-for="PaymentMethod" class="form-select" required>
                                            <option value="">-- Select Method --</option>
                                            <option value="CASH">Cash</option>
                                            <option value="CHEQUE">Cheque</option>
                                            <option value="BANK_TRANSFER">Bank Transfer</option>
                                            <option value="MPESA">M-Pesa</option>
                                            <option value="RTGS">RTGS</option>
                                        </select>
                                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="ReferenceNo" class="form-label">Reference Number *</label>
                                        <input asp-for="ReferenceNo" class="form-control"
                                               placeholder="e.g., Cheque No, Transaction ID, etc."
                                               required />
                                        <span asp-validation-for="ReferenceNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Remarks" class="form-label">Remarks / Notes</label>
                                <textarea asp-for="Remarks" class="form-control" rows="3"
                                          placeholder="Any additional notes about this disbursement..."></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>

                            <!-- Payment Details -->
                            <div class="card bg-light mb-3">
                                <div class="card-body">
                                    <h6><i class="bi bi-bank"></i> Payment Details</h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="bankName" class="form-label">Bank Name</label>
                                                <select class="form-select" id="bankName">
                                                    <option value="">-- Select Bank --</option>
                                                    <option value="EQUITY">Equity Bank</option>
                                                    <option value="KCB">KCB Bank</option>
                                                    <option value="COOP">Cooperative Bank</option>
                                                    <option value="STANDARD">Standard Chartered</option>
                                                    <option value="ABSA">Absa Bank</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="accountNumber" class="form-label">Account Number</label>
                                                <input type="text" class="form-control" id="accountNumber"
                                                       placeholder="Member's account number" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="accountName" class="form-label">Account Name</label>
                                        <input type="text" class="form-control" id="accountName"
                                               value="@loanDetails?.MemberName" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                <strong>Note:</strong> This disbursement will trigger the following:
                                <ul class="mb-0">
                                    <li>Loan status will change to "Disbursed"</li>
                                    <li>Repayment schedule will be generated</li>
                                    <li>Transaction will be recorded on blockchain</li>
                                    <li>Member will be notified</li>
                                </ul>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-loanNo="@loanNo" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Details
                                </a>
                                <button type="submit" class="btn btn-primary" id="submitBtn">
                                    <i class="bi bi-cash-coin"></i> Process Disbursement
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Disbursement Preview -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="bi bi-receipt"></i> Disbursement Preview</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-light">
                            <h6>Disbursement Receipt Preview</h6>
                            <table class="table table-sm">
                                <tr>
                                    <th>Loan Number:</th>
                                    <td>@loanNo</td>
                                </tr>
                                <tr>
                                    <th>Member:</th>
                                    <td>@loanDetails?.MemberName</td>
                                </tr>
                                <tr>
                                    <th>Amount:</th>
                                    <td class="text-success"><strong>@(loanDetails?.ApprovedAmount?.ToString("C") ?? "N/A")</strong></td>
                                </tr>
                                <tr>
                                    <th>Date:</th>
                                    <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Processed By:</th>
                                    <td>@User.Identity?.Name</td>
                                </tr>
                            </table>
                            <div class="text-center mt-3">
                                <button class="btn btn-sm btn-outline-success" id="printReceipt">
                                    <i class="bi bi-printer"></i> Print Receipt
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            const disbursementForm = $('#disbursementForm');
            const submitBtn = $('#submitBtn');
            const paymentMethod = $('#PaymentMethod');
            const bankDetails = $('.card.bg-light');

            // Show/hide bank details based on payment method
            function toggleBankDetails() {
                const method = paymentMethod.val();
                if (method === 'BANK_TRANSFER' || method === 'RTGS') {
                    bankDetails.show();
                    $('#bankName').prop('required', true);
                    $('#accountNumber').prop('required', true);
                } else {
                    bankDetails.hide();
                    $('#bankName').prop('required', false);
                    $('#accountNumber').prop('required', false);
                }
            }

            // Initial toggle
            toggleBankDetails();

            // Toggle on change
            paymentMethod.on('change', toggleBankDetails);

            // Form validation
            disbursementForm.on('submit', function(e) {
                // Check all checklist items
                const check3 = $('#check3').is(':checked');
                const check4 = $('#check4').is(':checked');
                const check5 = $('#check5').is(':checked');

                if (!check3 || !check4 || !check5) {
                    e.preventDefault();
                    alert('Please complete all checklist items before disbursing the loan.');
                    return false;
                }

                // Show loading
                submitBtn.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');
                submitBtn.prop('disabled', true);
            });

            // Print receipt
            $('#printReceipt').on('click', function() {
                window.print();
            });

            // Auto-populate processed by
            $('#ProcessedBy').val('@User.Identity?.Name');

            // Auto-generate reference number for some methods
            paymentMethod.on('change', function() {
                const method = $(this).val();
                let reference = $('#ReferenceNo').val();

                if (!reference) {
                    switch(method) {
                        case 'CHEQUE':
                            reference = 'CHQ' + new Date().getFullYear() + '-' + Math.floor(Math.random() * 10000);
                            break;
                        case 'MPESA':
                            reference = 'MPESA' + new Date().getTime().toString().slice(-8);
                            break;
                        case 'BANK_TRANSFER':
                            reference = 'BT' + new Date().getTime().toString().slice(-10);
                            break;
                    }

                    if (reference) {
                        $('#ReferenceNo').val(reference);
                    }
                }
            });
        });
    </script>
}