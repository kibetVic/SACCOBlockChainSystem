@model SACCOBlockChainSystem.Models.DTOs.DepositDTO

@{
    ViewData["Title"] = "Make Deposit";
    var isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-money-bill-wave"></i> Make Deposit</h4>
                </div>
                <div class="card-body">
                    @if (isAdmin)
                    {
                        <!-- Member Search for Admin/Staff -->
                        <div class="form-group">
                            <label for="memberSearch">Search Member *</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="memberSearch"
                                       placeholder="Enter member number, name, or ID number...">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="searchMemberBtn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div id="searchResults" class="mt-2" style="display: none;">
                                <div class="list-group" id="memberResults"></div>
                            </div>
                        </div>
                    }

                    <form id="depositForm" method="post">
                        <!-- Hidden field for MemberNo -->
                        <input type="hidden" asp-for="MemberNo" id="MemberNo" />

                        @if (!isAdmin && ViewBag.CurrentMember != null)
                        {
                            <!-- Display current member info for regular users -->
                            <div class="alert alert-info">
                                <h6>Account Information:</h6>
                                <p><strong>Member No:</strong> @ViewBag.CurrentMember.MemberNo</p>
                                <p><strong>Name:</strong> @ViewBag.CurrentMember.Surname @ViewBag.CurrentMember.OtherNames</p>
                                <p><strong>Current Balance:</strong> @(ViewBag.CurrentBalance?.ToString("C") ?? "KES 0.00")</p>
                            </div>
                        }

                        <!-- Selected Member Display -->
                        <div class="form-group" id="selectedMemberInfo" style="display: none;">
                            <label>Selected Member:</label>
                            <div class="alert alert-success">
                                <div id="memberDetails">
                                    <!-- Member details will be loaded here -->
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Amount">Amount (KES) *</label>
                            <input asp-for="Amount" class="form-control" min="100" max="1000000" step="100" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <small class="form-text text-muted">Minimum deposit: KES 100, Maximum: KES 1,000,000</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="PaymentMode">Payment Method *</label>
                            <select asp-for="PaymentMode" class="form-control" required>
                                <option value="">Select Method</option>
                                <option value="CASH">Cash</option>
                                <option value="MPESA">M-Pesa</option>
                                <option value="BANK">Bank Transfer</option>
                                <option value="CHEQUE">Cheque</option>
                            </select>
                            <span asp-validation-for="PaymentMode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ReceiptNo">Receipt Number (Optional)</label>
                            <input asp-for="ReceiptNo" class="form-control" placeholder="Enter receipt number if available" />
                            <span asp-validation-for="ReceiptNo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Purpose">Purpose (Optional)</label>
                            <input asp-for="Purpose" class="form-control" placeholder="e.g., Monthly savings, Share purchase" />
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ContactInfo">Contact Info (Optional)</label>
                            <input asp-for="ContactInfo" class="form-control" placeholder="Phone number or email" />
                            <span asp-validation-for="ContactInfo" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="ProcessedBy" value="@User.Identity.Name" />

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn" disabled="@(isAdmin ? "disabled" : null)">
                                <i class="fas fa-paper-plane"></i> Submit Deposit
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            var isAdmin = @Json.Serialize(isAdmin);
            var selectedMember = null;

            if (isAdmin) {
                // Setup member search for admin
                setupMemberSearch();
            } else {
                // For regular users, set their member number
                var currentMemberNo = '@(ViewBag.CurrentMember?.MemberNo ?? "")';
                if (currentMemberNo) {
                    $('#MemberNo').val(currentMemberNo);
                    $('#submitBtn').prop('disabled', false);
                    loadMemberDetails(currentMemberNo);
                }
            }

            // Form submission
            $('#depositForm').on('submit', function(e) {
                if (isAdmin && !$('#MemberNo').val()) {
                    e.preventDefault();
                    showAlert('error', 'Please select a member first.');
                    return false;
                }
                return true;
            });

            function setupMemberSearch() {
                // Debounce search to avoid too many requests
                var searchTimeout;
                $('#memberSearch').on('input', function() {
                    clearTimeout(searchTimeout);
                    var searchTerm = $(this).val().trim();
                    if (searchTerm.length >= 2) {
                        searchTimeout = setTimeout(function() {
                            searchMembers(searchTerm);
                        }, 500);
                    } else {
                        $('#searchResults').hide();
                    }
                });

                $('#searchMemberBtn').click(function() {
                    var searchTerm = $('#memberSearch').val().trim();
                    if (searchTerm.length >= 2) {
                        searchMembers(searchTerm);
                    }
                });

                // Close search results when clicking outside
                $(document).click(function(e) {
                    if (!$(e.target).closest('#memberSearch, #searchResults').length) {
                        $('#searchResults').hide();
                    }
                });
            }

            function searchMembers(searchTerm) {
                $.ajax({
                    url: '@Url.Action("SearchMember", "TransactionsMvc")',
                    type: 'GET',
                    data: { searchTerm: searchTerm },
                    beforeSend: function() {
                        $('#searchResults').html('<div class="text-center p-2"><i class="fas fa-spinner fa-spin"></i> Searching...</div>').show();
                    },
                    success: function(response) {
                        if (response.success && response.data.length > 0) {
                            var html = '';
                            response.data.forEach(function(member) {
                                html += `
                                    <a href="#" class="list-group-item list-group-item-action member-item"
                                       data-memberno="${member.memberNo}">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>${member.memberNo}</strong> - ${member.fullName}
                                                <br><small class="text-muted">
                                                    <i class="fas fa-id-card"></i> ${member.idno || 'N/A'} |
                                                    <i class="fas fa-phone"></i> ${member.phoneNo || 'N/A'}
                                                </small>
                                            </div>
                                            <div class="text-right">
                                                <small class="text-success">
                                                    <strong>KES ${member.currentBalance ? member.currentBalance.toLocaleString() : '0.00'}</strong>
                                                </small>
                                            </div>
                                        </div>
                                    </a>
                                `;
                            });
                            $('#searchResults').html(html).show();
                        } else {
                            $('#searchResults').html('<div class="text-center p-2 text-muted">No members found</div>').show();
                        }
                    },
                    error: function() {
                        $('#searchResults').html('<div class="text-center p-2 text-danger">Error searching members</div>').show();
                    }
                });
            }

            // Handle member selection
            $(document).on('click', '.member-item', function(e) {
                e.preventDefault();
                var memberNo = $(this).data('memberno');
                $('#MemberNo').val(memberNo);
                $('#memberSearch').val(memberNo);
                $('#searchResults').hide();
                loadMemberDetails(memberNo);
            });

            function loadMemberDetails(memberNo) {
                $.ajax({
                    url: '@Url.Action("GetMemberDetails", "TransactionsMvc")',
                    type: 'GET',
                    data: { memberNo: memberNo },
                    beforeSend: function() {
                        $('#memberDetails').html('<div class="text-center"><i class="fas fa-spinner fa-spin"></i> Loading details...</div>');
                        $('#selectedMemberInfo').show();
                    },
                    success: function(response) {
                        if (response.success) {
                            var member = response.data;
                            selectedMember = member;

                            var detailsHtml = `
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Member No:</strong> ${member.memberNo}</p>
                                        <p><strong>Name:</strong> ${member.fullName}</p>
                                        <p><strong>ID Number:</strong> ${member.idNumber || 'N/A'}</p>
                                        <p><strong>Phone:</strong> ${member.phone || 'N/A'}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Email:</strong> ${member.email || 'N/A'}</p>
                                        <p><strong>Employer:</strong> ${member.employer || 'N/A'}</p>
                                        <p><strong>Station:</strong> ${member.station || 'N/A'}</p>
                                        <p><strong>Current Balance:</strong> <span class="badge bg-success">KES ${member.currentBalance.toLocaleString()}</span></p>
                                    </div>
                                </div>
                            `;
                            $('#memberDetails').html(detailsHtml);
                            $('#submitBtn').prop('disabled', false);

                            // Show success message
                            showAlert('success', `Member ${member.memberNo} selected successfully. You can now proceed with the deposit.`);
                        } else {
                            $('#memberDetails').html('<div class="text-danger">Error loading member details</div>');
                            $('#submitBtn').prop('disabled', true);
                        }
                    },
                    error: function() {
                        $('#memberDetails').html('<div class="text-danger">Error loading member details</div>');
                        $('#submitBtn').prop('disabled', true);
                    }
                });
            }

            function showAlert(type, message) {
                var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                var icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

                var alertHtml = `
                    <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                        <i class="fas ${icon}"></i> ${message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                `;

                // Remove existing alerts
                $('.alert-dismissible').remove();

                // Add new alert before the form
                $('#depositForm').before(alertHtml);

                // Auto remove after 5 seconds
                setTimeout(function() {
                    $('.alert-dismissible').alert('close');
                }, 5000);
            }

            // Clear member selection
            $('#clearMemberBtn').click(function() {
                $('#MemberNo').val('');
                $('#memberSearch').val('');
                $('#selectedMemberInfo').hide();
                $('#submitBtn').prop('disabled', true);
                selectedMember = null;
            });
        });
    </script>
}